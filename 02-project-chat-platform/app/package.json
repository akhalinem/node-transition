{
  "name": "02-project-chat-platform",
  "version": "1.0.0",
  "description": "A simple chat platform project for learning purposes.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "docker:dev": "docker compose up -d --build",
    "docker:dev:down": "docker compose down -v",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:logs": "docker compose logs -f app",
    "docker:rebuild": "docker compose down -v && docker compose up --build"
  },
  "keywords": [],
  "author": "akhalinem",
  "license": "ISC",
  "dependencies": {
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "^22.0.0"
  }
}
